@model Aurifier.Models.
@{
    ViewBag.Title = "Lead";
}
<h2>LeadGeneration</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewLead(0)">Add New Lead</a> <br /><br />
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th>Lead_Id</th>
                <th>LeadName</th>
                <th>Company</th>
                <th>Address</th>
                <th>Mail_Id</th>
                <th>Mobile Number</th>
                <th>GeneratedBy</th>
                <th>Team</th>
                <th>Manager</th>
                <th>Employee</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody id="SetEmployeeList">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>
    </div>
    <div class="modal fade" id="MyModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 id="ModalTitle"></h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <fieldset id="SubmitForm">
                        @Html.HiddenFor(m => m.Lead_Id, new { @id = "Lead_Id" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LeadName, new { @id = "FName", @class = "form-control", @placeholder = "First Name*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Company, new { @id = "LName", @class = "form-control", @placeholder = " Last Name*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Address, new { @id = "UName", @class = "form-control", @placeholder = "UserName*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Mail_Id, new { @id = "Email", @class = "form-control", @placeholder = "Email*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.MobileNumber, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.GeneratedBy, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.Team_Id, ViewBag.Team as SelectList, "--Select Team--", new { @id = "ddlTeam", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Manager, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.RolesId, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.EmployeeId, ViewBag.Role as SelectList, "--Select Role--", new { @id = "ddlRole", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Date, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Time, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Descreption, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                        </div>
                        <div class="form-group">
                            <a href="#" class="btn btn-block btn-danger" id="SaveEmployeeRecord">Save</a>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    @*Create a PopUp Model For DeleteConfirmation*@
    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="ModalTitle"></h4>*@
                </div>
                <div class="modal-body">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Employee Record</h4>
                </div>
                <div class="modal-body">
                    <h4>Are you sure? You want to Delete this Record.</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary" data-dismiss="modal">Cancel</a>
                    <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirm</a>
                </div>
            </div>
        </div>
    </div>
</div>
