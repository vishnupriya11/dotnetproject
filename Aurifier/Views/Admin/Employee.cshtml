@model Aurifier.Models.EmployeeViewModel

@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<h2>Employee</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@*<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css">
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>*@
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewEmployee(0)">Add New Employee</a> <br /><br />
    @*@Html.TextBoxFor(m => m.UserName, new {@class="form-control",placeholder="Search Here"})*@

    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th>EmpId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Role</th>
                <th>Team</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody id="SetEmployeeList">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>
    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.EmpId, new { @id = "EmpId" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.FirstName, new { @id = "FName", @class = "form-control", @placeholder = "First Name*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.LastName, new { @id = "LName", @class = "form-control", @placeholder = " Last Name*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @id = "UName", @class = "form-control", @placeholder = "UserName*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @id = "Email", @class = "form-control", @placeholder = "Email*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MobileNumber, new { @id = "MNumber", @class = "form-control", @placeholder = "Mobile Number*" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @id = "Password", @class = "form-control", @placeholder = "Password*" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "Cpassword", @class = "form-control", @placeholder = "ConfirmPassword*" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Roles_Id, ViewBag.Role as SelectList, "--Select Role--", new { @id = "ddlRole", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.TeamId, ViewBag.Team as SelectList, "--Select Team--", new { @id = "ddlTeam", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-block btn-danger" id="SaveEmployeeRecord">Save</a>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="MyModal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle1"></h4>
                </div>
                <div class="modal-body">
                    <form id="form1">
                        <fieldset id="SubmitForm1">
                            @Html.HiddenFor(m => m.EmpId, new { @id = "EmpId1" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.FirstName, new { @id = "FName1", @class = "form-control", @placeholder = "First Name*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.LastName, new { @id = "LName1", @class = "form-control", @placeholder = " Last Name*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @id = "UName1", @class = "form-control", @placeholder = "UserName*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @id = "Email1", @class = "form-control", @placeholder = "Email*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MobileNumber, new { @id = "MNumber1", @class = "form-control", @placeholder = "Mobile Number*" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Roles_Id, ViewBag.Role as SelectList, "--Select Role--", new { @id = "ddlRole1", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.TeamId, ViewBag.Team as SelectList, "--Select Team--", new { @id = "ddlTeam1", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-block btn-danger" id="SaveEmployeeRecord1">Save</a>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @*Create a PopUp Model For DeleteConfirmation*@
    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="ModalTitle"></h4>*@
                </div>
                <div class="modal-body">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Employee Record</h4>
                </div>
                <div class="modal-body">
                    <h4>Are you sure? You want to Delete this Record.</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary" data-dismiss="modal">Cancel</a>
                    <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirm</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    $("#LoadingStatus").html("Loading....");
    $.get("/Admin/getEmployee", null, DataBind);
    function DataBind(EmployeeList) {
        //This Code For Receive All Data From Controller And Show It In Client Side
        debugger;
        var SetData = $("#SetEmployeeList");
        for (var i = 0; i < EmployeeList.length; i++) {
            var Data = "<tr class='row_" + EmployeeList[i].EmpId + "'>" +
                "<td>" + EmployeeList[i].EmpId + "</td>" +
                "<td>" + EmployeeList[i].FirstName + "</td>" +
                "<td>" + EmployeeList[i].LastName + "</td>" +
                "<td>" + EmployeeList[i].UserName + "</td>" +
                "<td>" + EmployeeList[i].Email + "</td>" +
                "<td>" + EmployeeList[i].MobileNumber + "</td>" +
                "<td>" + EmployeeList[i].Roles_Name + "</td>" +
                "<td>" + EmployeeList[i].TeamNumber + "</td>" +
                "<td>" + "<a href='#' class='btn btn-success' onclick='EditEmployeeRecord(" + EmployeeList[i].EmpId + ")' ><span class='glyphicon glyphicon-pencil'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteEmployeeRecord(" + EmployeeList[i].EmpId + ")'><span class='glyphicon glyphicon-remove'></span></a>" + "</td>" +
                "</tr>";

            SetData.append(Data);
            $("#LoadingStatus").html(" ");

        }

    }
    //Show The Popup Modal For Add New Student

    function AddNewEmployee(EmpId) {
        $("#form")[0].reset();
        $("#EmpId").val(0);
        $("#ddlRole option:selected").text("--Select Role--");
        $("#ddlTeam option:selected").text("--Select Team--");
        $("#ModalTitle").html("Add New Employee");
        $("#MyModal").modal();

    }

    //Show The Popup Modal For Edit Student Record

    function EditEmployeeRecord(EmpId) {
        var url = "/Admin/getEmployeeById?EmpId=" + EmpId;
        $("#ModalTitle1").html("Update Employee Record");
        $("#MyModal1").modal();
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {
                var obj = JSON.parse(data);
                debugger;
                $("#EmpId1").val(obj.EmpId);
                $("#FName1").val(obj.FirstName);
                $("#LName1").val(obj.LastName);
                $("#UName1").val(obj.UserName);
                $("#Email1").val(obj.Email);
                $("#MNumber1").val(obj.MobileNumber);
                $("#ddlRole1").val(obj.Roles_Id);
                $("#ddlTeam1").val(obj.TeamId);
                //$("#ddlRole option:selected").text(obj.Role.Roles_Name);
                //$("#ddlRole option:selected").val(obj.Roles_Id);
                //$("#ddlTeam option:selected").text(obj.TeamsTable.TeamNumber);
                //$("#ddlTeam option:selected").val(obj.TeamId);
            }
        })
    }
    $("#SaveEmployeeRecord").click(function () {
        debugger;
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Admin/SaveDataInDataBase",
            data: data,
            success: function (result) {
                alert(" Successful!....");
                window.location.href = "/Admin/Employee";
                $("#MyModal").modal("Hide");
            }
        })
    })
    $("#SaveEmployeeRecord1").click(function () {
        debugger;
        var data = $("#SubmitForm1").serialize();
        $.ajax({
            type: "Post",
            url: "/Admin/SaveDataInDataBase",
            data: data,
            success: function (result) {
                alert(" Successful!....");
                window.location.href = "/Admin/Employee";
                $("#MyModal1").modal("Hide");
            }
        })
    })
    //show the popup modal for deleteconfirmation
    function DeleteEmployeeRecord(EmpId) {
        $("#EmpId").val(EmpId);
        $("#DeleteConfirmation").modal("show");
    }
    //this method pass data slected data from view to controller
    function ConfirmDelete() {
        var EmpId = $("#EmpId").val();
        $.ajax({
            type: "POST",
            url: "/Admin/DeleteEmployeeRecord?EmpId=" + EmpId,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + EmpId).remove();
            }
        })
    }

</script>
